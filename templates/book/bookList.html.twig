{# templates/list.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des livres</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Header Section -->
    <header class="bg-warning text-white text-center py-3 mb-4">
        <h1 class="display-4">Bienvenue Ã  la Liste des Livres</h1>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="text-center mb-4">Liste des livres</h2>

                {% if books is not defined or books is empty %}
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">Aucun livre disponible.</h4>
                    </div>
                {% else %}
                    <!-- Responsive Table -->
                    <div class="table-responsive">
                      {# <form action="{{ path('app_crud_book') }}" method="get">
       <input type="text" name="authorName" placeholder="searhc by author name">
       <input type="submit" value="search">
   </form> #}
                        <table class="table table-dark table-striped table-bordered text-center">
                            <thead class="thead-light">
                                <tr>
                                    <th>book Title</th>
                                    <th>book nbr_page</th>
                                    <th>book Picture</th>
                                     <th>Author</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for book in books %}
                                    <tr>
                                        <td>{{ book.title }}</td>
                                        <td>
                                           {{ book.nbrPages }}
                                        </td>
                                          <td>
                                           {{ book.picture }}
                                        </td>
                                          <td>
                                           {{ book.author.username }}
                                        </td>
                                        
                                        
                                        <td><a href="{{ path('app_update_book', { id: book.id }) }}">Modifier</a>
                                  
                                   <td><a href="{{ path('app_delete_book', { id: book.id }) }}">Supprimer</a>
                                  
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                 
                {% endif %} 
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
